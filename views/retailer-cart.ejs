    <title>Document</title>
    <link rel="stylesheet" href="../css/retailer/dashboard.css">
    <link rel="stylesheet" href="../css/retailer/CART.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .CART {
            margin-left: 280px;
            font-family: 'Roboto', sans-serif;
        }

        .CART {
            margin-left: 280px;
            font-family: 'Roboto', sans-serif;
        }

        .CART > header {
            padding: 15px;
            width: calc(100vw - 290px);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid rgb(202, 202, 202);
            position: fixed;
            top: 0;
            background-color: white;
        }

        .CART > header > h1{
            font-size: 2rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .profile_container {
            width: 200px;
            height: 55px;
            background-color: #D9D9D9;
            border-radius: 10px;
            display: flex;
            align-items: center;
            padding: 5px 0px 5px 15px;
            gap: 15px;
        }

        .profile_icon {
            width: 38px;
            height: 38px;
            background-color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .desc {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .name {
            font-weight: bold;
            font-size: 1.05rem;
        }

        .role {
            font-size: 0.9rem;
        }

        .CART .subheader {
            padding: 15px;
            width: calc(100vw - 290px);
            display: grid;
            grid-template-columns: 2fr 1fr;
            position: fixed;
            top: 86px;
            font-size: 1.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            background-color: white;
            z-index: 0;
        }

         .cartItems {
            z-index: 0;
            width: calc(50vw);
            min-height: calc(100vh - 280px);
            /* background-color: salmon; */
            margin-top: 160px;
            overflow-y: scroll;
        }

        .summary-container {
            position: fixed;
            right: 0;
            min-height: 600px;
            box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
            top: 150px;
            width: 429px;
            padding: 15px;
        }

        .cardItem {
            box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
        }

        .gridClass {
            display: grid;
            grid-template-columns: 2fr 1.5fr;
        }

        .cartTotalPrice {
            position: fixed;
            top: 560px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            justify-content: center;
            align-items: center;
        }

        .cartTotal, .shipping, .toPay{
            display: grid;
            width: 100%;
            grid-template-columns: 2fr 1.5fr;
            font-size: 1.2rem;
            font-weight: 600;
        }

        .inactive {
            scale: 0;
        }

        input[type=number] {
            appearance: none;
        }

        .order-form {
            height: calc(100vh - 70px);
            background: linear-gradient(0deg, rgba(2,0,36,1) 19%, rgba(7,30,65,1) 33%, rgba(133,182,254,1) 100%);
        }

        

    </style>
</head>
